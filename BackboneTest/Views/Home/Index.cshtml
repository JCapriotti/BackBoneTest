@model BackboneTest.Models.ProductListModel

@{
    ViewBag.Title = "Product List";
}

<h2>Product List</h2>

<a data-bind="attr: {href: '#' + (page() + 1)}">Next</a>

<table id="product-list" border="1" cellpadding="3">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Cost</th>
			<th>Updated</th>
		</tr>
	</thead>
	<tbody data-bind="foreach: products">
		<tr>
			<td data-bind="text: ProductId"></td>
			<td data-bind="text: Name"></td>
			<td>
				<div data-bind="if: NeedsUpdatedPrice"><img src="@Links.Content.ajax_loader_gif" /></div>
				<div data-bind="ifnot: NeedsUpdatedPrice"><span data-bind="text: Cost"></span></div>
			</td>
			<td data-bind="text: Updated"></td>
		</tr>
	</tbody>
</table>

